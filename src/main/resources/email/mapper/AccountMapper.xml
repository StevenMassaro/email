<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="email.mapper.AccountMapper">
    <select id="get" resultMap="accountResultMap">
        <include refid="selectAccounts"/>
        WHERE a.id = #{accountid}
    </select>

    <select id="list" resultMap="accountResultMap">
        <include refid="selectAccounts"/>
    </select>

    <sql id="selectAccounts">
        SELECT * FROM email.account a
    </sql>

    <resultMap id="accountResultMap" type="email.model.Account">
        <id property="id" column="id"/>
        <result property="hostname" column="hostname"/>
        <result property="port" column="port"/>
        <result property="authentication" column="authentication"/>
        <result property="inboxName" column="inboxname"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="dateCreated" column="dateCreated"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO email.account(hostname, port, authentication, inboxname, username, "password")
        VALUES(#{hostname}, #{port}, #{authentication}, #{inboxName}, #{username}, #{password})
    </insert>

    <update id="updatePassword">
        UPDATE email.account a
        SET password = #{newPassword}
        WHERE a.id = #{accountId}
    </update>
</mapper>